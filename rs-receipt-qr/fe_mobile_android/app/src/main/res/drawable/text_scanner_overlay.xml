<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/scanner_overlay" />
        </shape>
    </item>
    <!-- Wider rectangle for text recognition area -->
    <item
        android:bottom="250dp"
        android:left="24dp"
        android:right="24dp"
        android:top="180dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="@color/scanner_frame_text" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
